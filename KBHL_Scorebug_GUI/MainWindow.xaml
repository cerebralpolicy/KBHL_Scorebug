<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KBHL_Scorebug_GUI"
        xmlns:f="clr-namespace:KBHL_Scorebug_GUI.Functions"
        xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
        x:Name="window" x:Class="KBHL_Scorebug_GUI.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" ResizeMode="CanMinimize">
    <Window.Resources>
        <f:FontScalar x:Key="ScaleFont" />
        <f:FrameScalar2x1 x:Key="2x1" />
        <f:ButtonBorder x:Key="BtnBorder" />
    </Window.Resources>
    <Grid x:Name="grid" Background="{DynamicResource ScoreboardGreenDark}" ShowGridLines="True" Margin="0,0,0,-121">
        <Grid.RowDefinitions>
            <RowDefinition x:Name="Control" Height="3*"/>
            <RowDefinition x:Name="Preview"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="HomeTeamPanel" Tag="Home" Width="333*"/>
            <ColumnDefinition x:Name="GamePanel" Tag="Game" Width="334*"/>
            <ColumnDefinition x:Name="RoadTeamPanel" Tag="Road" Width="333*"/>
        </Grid.ColumnDefinitions>
        <Rectangle x:Name="GameClockFrame" Grid.Column="1" HorizontalAlignment="Center" Height="128" Margin="0,82,0,0" VerticalAlignment="Top" Width="256" Fill="Black" Stroke="{DynamicResource ScoreboardStroke}" StrokeThickness="4"/>
        <Canvas x:Name="GameClockGhost" Grid.Column="1" Margin="86,82,86,0" VerticalAlignment="Top" Width="256" Height="128">
            <TextBlock 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
                Foreground="#FF2C2300" 
                RenderTransformOrigin="0.5,0.5" 
                TextAlignment="Center" 
                FontFamily="{DynamicResource ScoreboardDisplayFont}" 
                FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="22222" HorizontalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="8"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
                Foreground="#FF2C2300" 
                RenderTransformOrigin="0.5,0.5" 
                TextAlignment="Center" 
                FontFamily="{DynamicResource ScoreboardDisplayFont}" 
                FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="88888" HorizontalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="8"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}"
                Foreground="#FF2C2300" 
                RenderTransformOrigin="0.5,0.5" 
                TextAlignment="Center" 
                FontFamily="{DynamicResource ScoreboardDisplayFont}" 
                FontSize="64" LineHeight="48" ClipToBounds="True" Text="55555" HorizontalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="8"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
                Foreground="#FF2C2300" 
                RenderTransformOrigin="0.5,0.5" 
                TextAlignment="Center" 
                FontFamily="{DynamicResource ScoreboardDisplayFont}" 
                FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="88:88" HorizontalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="8"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
                Foreground="#FF2C2300" 
                RenderTransformOrigin="0.5,0.5" 
                TextAlignment="Center" 
                FontFamily="{DynamicResource ScoreboardDisplayFont}" 
                FontSize="64" LineHeight="48" ClipToBounds="True" Text="77777" HorizontalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="8"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}"
                Foreground="#FF2C2300" 
                RenderTransformOrigin="0.5,0.5" 
                TextAlignment="Center" 
                FontFamily="{DynamicResource ScoreboardDisplayFont}" 
                FontSize="64" LineHeight="48" ClipToBounds="True" Text="11111" HorizontalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="8"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock 
                TextWrapping="Wrap" 
                VerticalAlignment="Top" 
                Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}"
                Foreground="#FF2C2300" 
                RenderTransformOrigin="0.5,0.5" 
                TextAlignment="Center" 
                FontFamily="{DynamicResource ScoreboardDisplayFont}" 
                FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="*****" HorizontalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform X="0" Y="8"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
        </Canvas>
        <Button Grid.Column="1" Content="RESET" HorizontalAlignment="Right" Margin="0,215,32,0" VerticalAlignment="Top" Width="120" Height="{Binding Width, Converter={StaticResource 2x1}, RelativeSource={RelativeSource Mode=Self}}" Background="{DynamicResource Button_BlueFill}" FontFamily="Octin College Rg" FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" BorderThickness="{Binding Width, Converter={StaticResource BtnBorder}, RelativeSource={RelativeSource Mode=Self}}" BorderBrush="{DynamicResource Button_BlueStroke}" Foreground="#FFF0F0F0" Click="ResetClock_Click"/>
        <Button x:Name="ClockToggle" Grid.Column="1" HorizontalAlignment="Left" Margin="32,215,0,0" VerticalAlignment="Top" Width="120" Height="{Binding Width, Converter={StaticResource 2x1}, RelativeSource={RelativeSource Mode=Self}}" Background="{DynamicResource Button_GreenFill}" FontFamily="{DynamicResource StaticInterfaceFontFamily}" FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" BorderBrush="{DynamicResource Button_GreenStroke}" Foreground="#FFF0F0F0" Click="ClockToggle_Click" BorderThickness="{Binding Width, Converter={StaticResource BtnBorder}, RelativeSource={RelativeSource Mode=Self}}" SnapsToDevicePixels="True" Content="Start"/>
        <Rectangle x:Name="GameClockFrame_Copy" Grid.Column="1" HorizontalAlignment="Center" Height="128" Margin="0,423,0,0" VerticalAlignment="Top" Width="128" Fill="Black" Stroke="{DynamicResource ScoreboardStroke}" StrokeThickness="4"/>
        <Canvas Grid.Column="1" Height="64" VerticalAlignment="Top" Width="128" HorizontalAlignment="Center" Margin="0,285,0,0">
            <Rectangle x:Name="OverrideClockFrame" Height="64" VerticalAlignment="Top" Width="128" Fill="Black" Stroke="{DynamicResource ScoreboardStroke}" StrokeThickness="4"/>
        </Canvas>
        <Canvas x:Name="GameClockGhost_Copy1" Grid.Column="1" Margin="0,285,0,0" VerticalAlignment="Top" Width="128" Height="{Binding Width, Converter={StaticResource 2x1}, RelativeSource={RelativeSource Mode=Self}}" RenderTransformOrigin="0.5,0.5">
            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="4"/>
                </TransformGroup>
            </Canvas.RenderTransform>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="22222" HorizontalAlignment="Center"/>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="22222" HorizontalAlignment="Center"/>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="77777"/>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}"
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="88888" HorizontalAlignment="Center"/>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="88:88" HorizontalAlignment="Center"/>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}" 
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="88888" HorizontalAlignment="Center"/>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}"
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="88888" HorizontalAlignment="Center"/>
            <TextBlock 
        TextWrapping="Wrap" 
        VerticalAlignment="Top" 
        Height="{Binding Parent.Height, RelativeSource={RelativeSource Mode=Self}}" Width="{Binding Parent.Width, RelativeSource={RelativeSource Mode=Self}}"
        Foreground="#FF2C2300" 
        RenderTransformOrigin="0.5,0.5" 
        TextAlignment="Center" 
        FontFamily="{DynamicResource ScoreboardDisplayFont}" 
        FontSize="{Binding Height, Converter={StaticResource ScaleFont}, RelativeSource={RelativeSource Mode=Self}}" LineHeight="48" ClipToBounds="True" Text="*****" HorizontalAlignment="Center"/>
        </Canvas>
        <Canvas x:Name="OverrideClock" Grid.Column="1" Height="64" VerticalAlignment="Top" Width="128" HorizontalAlignment="Center" Margin="0,285,0,0">
            <TextBlock TextWrapping="Wrap" Text="  :  " VerticalAlignment="Top" FontSize="32" FontFamily="{DynamicResource ScoreboardDisplayFont}" Foreground="{DynamicResource ClockDisplayColour}" Width="128" TextAlignment="Center" Canvas.Top="4"/>
            <TextBox x:Name="MinOverride" Text="00" VerticalAlignment="Top" Width="64" Height="64" BorderThickness="0,2,8,0" Foreground="{DynamicResource ClockDisplayColour}" FontFamily="{DynamicResource ScoreboardDisplayFont}" FontSize="32" TextAlignment="Center" Background="{x:Null}" BorderBrush="{x:Null}" InputScope="Digits" Canvas.Top="2" MaxLength="2" SelectionBrush="{x:Null}" SelectionTextBrush="{x:Null}" TextWrapping="Wrap"/>
            <TextBox x:Name="SecOverride" TextWrapping="Wrap" Text="00" VerticalAlignment="Top" Width="64" Height="64" BorderThickness="8,2,0,0" Foreground="{DynamicResource ClockDisplayColour}" FontFamily="{DynamicResource ScoreboardDisplayFont}" FontSize="32" TextAlignment="Center" BorderBrush="{x:Null}" Background="{x:Null}" SelectionTextBrush="{x:Null}" InputScope="Digits" Canvas.Left="64" Canvas.Top="2" MaxLines="1" MaxLength="2" SelectionBrush="{x:Null}"/>
        </Canvas>
        <Button Grid.Column="1" Content="SET" HorizontalAlignment="Center" Margin="0,221,0,0" VerticalAlignment="Top" Width="96" Height="48" Background="{DynamicResource Button_BlueFill}" FontFamily="Octin College Rg" FontSize="24" BorderThickness="4,2,8,4" BorderBrush="{DynamicResource Button_BlueStroke}" Foreground="#FFF0F0F0" Click="SetClock_Click"/>
        <Button Grid.Column="1" Content="▲" HorizontalAlignment="Right" Margin="0,423,78,0" VerticalAlignment="Top" Width="60" Height="54" Background="{DynamicResource Button_BlueFill}" FontFamily="Octin College Rg" FontSize="24" BorderThickness="4,2,8,4" BorderBrush="{DynamicResource Button_BlueStroke}" Foreground="#FFF0F0F0" Click="ResetClock_Click"/>
        <Button Grid.Column="1" Content="▼" HorizontalAlignment="Right" Margin="0,497,78,0" VerticalAlignment="Top" Width="60" Height="54" Background="{DynamicResource Button_BlueFill}" FontFamily="Octin College Rg" FontSize="24" BorderThickness="4,2,8,4" BorderBrush="{DynamicResource Button_BlueStroke}" Foreground="#FFF0F0F0" Click="ResetClock_Click"/>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Margin="0,29,0,0" TextWrapping="Wrap" Text="Time Remaining" VerticalAlignment="Top" Height="48" Width="256" FontFamily="{DynamicResource StaticInterfaceFontFamily}" TextAlignment="Center" FontSize="36" RenderTransformOrigin="0.5,0.5" Foreground="White">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="5"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock Grid.Column="1" HorizontalAlignment="Center" Margin="0,370,0,0" TextWrapping="Wrap" Text="Period" VerticalAlignment="Top" Height="48" Width="256" FontFamily="{DynamicResource StaticInterfaceFontFamily}" TextAlignment="Center" FontSize="36" RenderTransformOrigin="0.5,0.5" Foreground="White">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="5"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <TextBlock x:Name="GameClockDisplay" 
            Grid.Column="1" 
            Margin="86,82,86,0" 
            TextWrapping="Wrap" 
            VerticalAlignment="Top" 
            Height="128" Width="256" 
            Foreground="{DynamicResource ClockDisplayColour}" 
            TextAlignment="Right" 
            FontFamily="{DynamicResource ScoreboardDisplayFont}" 
            FontSize="64" LineHeight="48" ClipToBounds="True" 
            Text="{Binding PeriodTimeRemaining_str, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type local:MainWindow}, Mode=FindAncestor}}" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform Y="8" X="-8"/>
                </TransformGroup>
            </TextBlock.RenderTransform>
        </TextBlock>
        <Button x:Name="OpenScorebug" Grid.Column="1" Content="OPEN" HorizontalAlignment="Center" Margin="0,561,0,0" VerticalAlignment="Top" Width="96" Height="48" Background="{DynamicResource Button_BlueFill}" FontFamily="Octin College Rg" FontSize="24" BorderThickness="4,2,8,4" BorderBrush="{DynamicResource Button_BlueStroke}" Foreground="#FFF0F0F0" Click="OpenScorebug_Click"/>
    </Grid>
</Window>